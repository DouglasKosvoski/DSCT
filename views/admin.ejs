<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='preconnect' href='https://fonts.googleapis.com' />
  <link rel='preconnect' href='https://fonts.gstatic.com', crossorigin />
  <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Marcellus+SC&display=swap' />
  <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
</head>
<body>
  <h2 class="title"><%= title %></h2>

  <div id="card">
    <div class="timeline">
      <div class="container left">
        <div class="content">
          <input v-model="title" style="width: 100%; height: 100%;"><br>
          <textarea v-model="content" style="width: 100%; height: 100%;"></textarea>
        </div>
      </div>

      <div class="container right">
        <div class="content">
          <h2>{{ title }}</h2>
          <p>{{ content }}</p>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
  var app6 = new Vue({
    el: '#card',
    data: {
      title: 'Insert title',
      content: 'Insert description!'
    }
  })
  </script>

</body>
</html>
